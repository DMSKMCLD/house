.box{
  width: 100%;
  height: auto;
}
.list{
  width: 98%;
  height: 330rpx;
  margin: 20rpx auto;
  background: #ccc;
  position: relative;
  border-radius: 20rpx;
}
.time{
  width: 60%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background:linear-gradient(to right, #ff3300, #ff6600);
  color: white;
  border-radius: 15rpx;
}
.detail{
  width: 20%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
  background:linear-gradient(to right, #ff6600, #ff3300);
  color: white;
  border-top-right-radius: 20rpx;
}
.name{
  width: 54%;
  height: 75rpx;
  line-height: 75rpx;
  position: absolute;
  top: 60rpx;
  left: 0;
  background: white;
  border-radius: 20rpx;
  font-size: 30rpx;
  text-align: center;
}
.phone{
  width: 45%;
  height: 75rpx;
  line-height: 75rpx;
  position: absolute;
  top: 60rpx;
  right: 0;
  background: white;
  border-radius: 20rpx;
  font-size: 30rpx;
  text-align: center;
}
.address{
  width: 100%;
  height: 100rpx;
  /* line-height: 100rpx; */
  text-align: center;
  background: white;
  border-radius: 20rpx;
  font-size: 30rpx;
  position: absolute;
  top: 140rpx;
  left: 0;
}
.pay{
 width: 50%;
 height: 75rpx;
 line-height: 75rpx;
 text-align: center;
 position: absolute;
 left: 0;
 bottom: 10rpx;
 background: white;
 border-radius: 20rpx;
 font-size: 30rpx;
}
.state{
  width: 50%;
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  position: absolute;
  right: 0;
  bottom: 10rpx;
  background: white;
  border-radius: 20rpx;
  color: orangered;
  font-size: 30rpx;
}