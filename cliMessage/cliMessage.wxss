.box{
  height: auto;
  width: 100%;
}
.list{
  position: relative;
  width: 100%;
  height: 200rpx;
  background: #ccc;
  margin-top: 20rpx; 
  text-align: center;
}
.img{
  width:20%;
  height:150rpx;
  border-radius: 75rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.img>image{
  width: 100%;
  height: 100%;
  border-radius: 75rpx;
}
.name{
  color: orangered;
  width: 55%;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  top: 20rpx;
  left: 20%;
  background:#fcfcfc;
}
.reason{
  width: 23.5%;
  height: 90rpx;
  background: white;
  position: absolute;
  right: 0;
  top: 105rpx;
  color: orangered;
  font-size: 25rpx;
}
.dongjie{
  position: absolute;
  top: 10rpx;
  right: 0;
}
.money{
   width: 55%;
   height: 50rpx;
   line-height: 50rpx;
  position: absolute;
  left: 20%;
  top: 80rpx;
  background:#fcfcfc;
  color: #ff3333;
}
.phone{
  text-align: center;
  width: 50%;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  bottom: 5rpx;
  left: 25%;
  background:#fcfcfc;
  border-radius: 25rpx;
  color: orangered;
}
.level{
  color: #9933cc;
   width: 25%;
   height: 50rpx;
   position: absolute;
   left: 0;
   bottom:5rpx;
   text-align: left;
   background:#fcfcfc; 
   border-radius: 25rpx;
}