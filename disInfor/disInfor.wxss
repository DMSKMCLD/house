.box{
  width: 100%;
  height: auto;
}
.release{
  position: relative;
  width: 100%;
  height: 100rpx;
  background: white;
}
.release>view{
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.release>image{
  position: absolute;
  right: 0;
  top: 0;
  width: 15%;
  height: 100rpx;
  border-radius: 50rpx;
}
.detail{
  width: 100%;
  height: auto;
}
.detail>view:nth-child(1){
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.detail>view:nth-child(2){
  width: 100%;
  /* height: auto; */
}
.detail>view:nth-child(2)>image{
  width: 30%;
  height: 130rpx;
  margin-left: 3%;
  margin-top: 20rpx;
}
.comments{
  width: 100%;
  height: auto;
}
.comments>view:nth-child(1){
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.comlist{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}
.comlist>view{
  outline: 1rpx solid black;
}
.cominfor{
  border-radius: 20rpx;
    width: 91%;
    height: 100rpx;
    position: relative;
    background: white;
    margin: 0 auto;
}
.cominfor>view{
  width: 31%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 20rpx;
}
.cominfor>image{
  position: absolute;
  right: 0;
  top: 0;
  width: 15%;
  height: 100rpx;
  border-radius: 50rpx;
}