.box{
  width: 100%;
  height: auto;
}
.nav{
  width: 100%;
  height: 101rpx;
}
.content{
  width: 100%;
  height: auto;
}
.main{
  width: 100%;
  height: 320rpx;
  background: #ccc;
  border-radius: 50rpx;
  margin-top: 10rpx;
  position: relative
}
.time{
  width: 40%;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  background: orangered;
  text-align: center;
  margin-left: 2%;
  color: white;
}
.more{
  width: 20%;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  top: 0;
  right: 2%;
  border-radius: 25rpx;
  text-align: center;
  background: orangered;
  color: white;
}
.content{
  width: 97%;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  position: absolute;
  right: 1%;
  background: #F7F7F7;
  border-radius: 25rpx;
  font-size: 30rpx;
  top: 50rpx;
}
.level{
  width: 55%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  left: 2%;
  position: absolute;
  bottom: 10rpx;
  background: #F7F7F7;
  border-radius: 25rpx;
  font-size: 30rpx;
}
.type{
  width: 41%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  right: 1%;
  position: absolute;
  bottom: 10rpx;
  background: #F7F7F7;
  border-radius: 25rpx;
  font-size: 30rpx;
}
