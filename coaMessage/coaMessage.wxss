.nav{
  width: 100%;
  height: 200rpx;
  background: #eaeaea;
  position: relative;
  margin-top: 15rpx;
}
.wxname{
  position: absolute;
  width: 50%;
  height: 50rpx;
  background: #fff;
  border-radius: 25rpx;
  left: 20%;
  top: 18rpx;
  text-align: center;
  color: orangered;
}
.wximg{
  width: 20%;
  height: 150rpx;
  position: absolute;
  left: 0%;
  top: 0rpx;
}
.wximg>image{
  width: 100%;
  height: 100%;
  border-radius: 85rpx;
}
.more{
  position: absolute;
  right: 0;
  top: 0;
}
.phone{
  border-radius: 25rpx;
  text-align: center;
  top: 150rpx;
  width: 55%;
  height: 50rpx;
  line-height: 50rpx;
  background: white;
  color: orangered;
  position: absolute;
  left: 0%;
}
.name{
  border-radius: 20rpx;
  text-align: center;
  width: 40%;
  height: 50rpx;
  line-height: 50rpx;
  background: white;
  color: orangered;
  bottom: 0;
  right: 0;
  position: absolute;
}
.position{
  background: white;
  text-align: center;
  width: 50%;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  left: 20%;
  bottom: 30%;
  color: orangered;
  border-radius: 35rpx;
}